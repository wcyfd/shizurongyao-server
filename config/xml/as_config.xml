        <item type="int" name="奖励" code="award" comment="奖励银币数量"/>
        <item type="int" name="战役" code="chapterId" comment="战场编号" replace="战场.xlsx|战场|战役|战场编号"/>
        <item type="int" name="建筑顺序" code="buildIndex" comment="建筑顺序"/>
